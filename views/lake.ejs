  <body>
    <div class="wrapper">
      <h1>The Lake</h1>
      <div class="grid">
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="grid-item">
            <a href="/post/<%= posts[i]._id%>" >
            <figure>
              <!--space holder for image-->
              <span><%= posts[i]["title"] %></span>
              <p><%= posts[i]["body"] %></p>
            </figure>
            </a>
            <span class="auth">by <a href="/pond/<%=userNameArr[i]%>">
              <%=userNameArr[i]%></span>
            </a>
          </div>
        <% } %>  
      </div>
      <div class="button-box">
      <a class="button" href="/post">Create a Post</a>
      
      <a class="button" href="/logout">Logout</a>
    </div> 
    </div>
